    body
        header
            div(class='header__left') 
                img(src='iw_logo.png')
                img(class='app-logo' src='app_logo.png')
            div(class='header__right') 
                div(id='theme-button' class='theme-button noselect')
                    span(id='dark' class='active') I 
                    span \ 
                    span(id='light') W 
        audio(id = "drum_roll")
            source(src="drum_roll.mp3" type="audio/mpeg")
            Your browser does not support the audio element.
        
        div(class='content')
            span(class="center-text")
                p(class="text-dark") Number of Cycles
                input(type="number" id="animation-speed-input" value="25")
            div(class='content-body center-text')
                ul(id='people-list' class='people-list')        
                    each person in people
                        if person.selected
                            li(class='name' data-selected)= person.name
                        else
                            li(class='name')= person.name
                button(id="go-button" class="go-button") GO
        script(src='/main.js')